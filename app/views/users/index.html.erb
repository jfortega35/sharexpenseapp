<h1>Listing Users</h1>

<%= link_to 'New User', new_user_path %>
<%= link_to 'Home', controller: 'welcome' %>

<table>
  <tr>
    <th>Group ID#</th>
    <th>Username</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Phone</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.group_id %></td>
      <td><%= user.username %></td>
      <td><%= user.firstname %></td>
      <td><%= user.lastname %></td>
      <td><%= user.email %></td>
      <td><%= user.phone %></td>
      <td><%= link_to 'Show', user_path(user) %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user_path(user),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
